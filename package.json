{
  "name": "star-wars-api-app",
  "version": "1.0.0",
  "description": "Star Wars API web application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:cucumber": "cucumber-js",
    "test:all": "npm test && npm run test:cucumber"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "jest": "^29.7.0",
    "puppeteer": "^24.23.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 66,
        "lines": 92,
        "statements": 92
      }
    },
    "collectCoverageFrom": [
      "server.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
